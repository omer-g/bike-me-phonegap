<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "co.il.bikeme.www"
        version   = "1.2.1">
    <name>BikeMe!</name>

    <description>
        Helps you find the best route when using TLV telOfan shared bikes project
    </description>

    <author href="http://phonegap.com" email="support@phonegap.com">
        Awesome Klarna BikeMe! Team
    </author>

    <preference name="phonegap-version" value="2.3.0" />
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="handset" />
    <preference name="fullscreen"       value="false" />
    <preference name="splash-screen-duration" value="10000" />

    <icon src="icon.png"/>
    <icon src="res/icon/android/mdpi.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="res/icon/android/mdpi.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="res/icon/android/hdpi.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="res/icon/android/xhdpi.png"   gap:platform="android"    gap:density="xhdpi" />

    <splash src="splash_screen.png" />
    <gap:splash src="res/screen/android/splash_screen200x320.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/android/splash_screen320x480.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/android/splash_screen480x800.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/android/splash_screen720x1280.png" gap:platform="android" gap:density="xhdpi" />
    
    <access origin="https://*.google.com"/>
    <access origin="https://*.googleapis.com"/>
    <access origin="https://*.gstatic.com"/>
    <access origin="https://google-maps-utility-library-v3.googlecode.com"/>
    
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/device" />
</widget>
